{
  "name": "@lzwme/sserver",
  "version": "0.0.5",
  "description": "一个基于 Node.js 的简易静态服务器，用于辅助开发调试随启随用",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "sserver": "bin/sserver.js",
    "ss": "bin/sserver.js"
  },
  "repository": "https://github.com/lzwme/static-server.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^14.18.0 || >=16.15.0"
  },
  "packageManager": "pnpm@7.2.0",
  "keywords": [
    "server",
    "web-server",
    "static-server",
    "proxy-server"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "files": [
    "dist",
    "ss.config.sample.js"
  ],
  "scripts": {
    "prepare": "husky install",
    "ss": "node bin/sserver.js",
    "start": "npm run stop && pm2 start dist/index.js --name sserver",
    "stop": "pm2 stop sserver",
    "watch": "tsc -w",
    "dev": "ts-node -T src/cli.ts",
    "build": "npm run clean && tsc",
    "clean": "flh rm -f dist",
    "version": "standard-version"
  },
  "dependencies": {
    "@lzwme/fe-utils": "^1.3.2",
    "commander": "^9.4.1",
    "console-log-colors": "^0.3.3",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@lzwme/fed-lint-helper": "^2.1.5",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.16",
    "@types/node-forge": "^1.3.1",
    "husky": "^8.0.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}

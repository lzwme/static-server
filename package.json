{
  "name": "@lzwme/sserver",
  "version": "0.0.1",
  "description": "一个基于 nodejs 的简易静态服务器，方便随时开发调试使用",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "sserver": "bin/sserver.js",
    "ss": "bin/sserver.js"
  },
  "repository": "http://github.com/lzwme/static-server.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=14"
  },
  "packageManager": "pnpm@7.2.0",
  "keywords": [
    "server",
    "web-server",
    "static-server",
    "proxy-server"
  ],
  "scripts": {
    "ss": "node bin/sserver.js",
    "start": "pnpm run stop && pm2 start dist/index.js --name sserver",
    "stop": "pm2 stop sserver",
    "dev": "ts-node -T src/index.ts",
    "build": "tsc",
    "version": "standard-version"
  },
  "dependencies": {
    "commander": "^9.3.0",
    "console-log-colors": "^0.2.3",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
